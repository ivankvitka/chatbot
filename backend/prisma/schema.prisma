generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AppConfig {
  id            Int      @id @default(1) // Singleton pattern - always id = 1
  dambaToken    String?  @map("damba_token")
  dambaSettings Json?    @map("damba_settings")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@map("app_config")
}
