generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AppConfig {
  id            Int      @id @default(1) // Singleton pattern - always id = 1
  dambaToken    String?  @map("damba_token")
  dambaSettings String?  @map("damba_settings")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@map("app_config")
}

model GroupScreenshotSettings {
  id              Int      @id @default(autoincrement())
  groupId         String   @unique @map("group_id")
  groupName       String   @map("group_name")
  intervalMinutes Int      @map("interval_minutes")
  enabled         Boolean  @default(false)
  reactOnMessage  String?  @map("react_on_message")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@map("group_screenshot_settings")
}
